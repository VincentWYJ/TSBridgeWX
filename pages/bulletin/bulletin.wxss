/**bulletin.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.bulletin {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.userinfo-img {
  width: 70rpx;
  height: 70rpx;
  margin: 5rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #00ff00;
  font-size: 40rpx;
}
.userinfo-time {
  color: #888888;
  font-size: 25rpx;
}
.content {
  /*text-indent: 60rpx;*/
  font-size: 30rpx;
  margin-top: 20rpx;
}
.scroll-view {
  height: 1135rpx;
  width: 100%;
}