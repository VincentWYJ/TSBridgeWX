/**introduce.wxss**/
swiper.swiper-top {
  height: 1250rpx;
  overflow: hidden;
}
.img-top {
  height: 1250rpx;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.btn-bottom {
  position: absolute;
  height: 99rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: #66ffff;
  margin-top: 1px
}
.btn-float {
  position: absolute;
  opacity: 0.6;
  bottom: 80rpx;
  right: 265rpx;
  width: 220rpx;
  height: 80rpx;
  border-radius: 10%;
  box-shadow: 2px 2px 10px #AAA;
  background: #dddddd;
  z-index: 100;
  color: #ff0000;
  font-weight: bold;
}